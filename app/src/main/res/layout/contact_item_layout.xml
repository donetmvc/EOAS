<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center">
            <com.eland.android.eoas.Views.CircleImageView
                android:id="@+id/img_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="sysadmin"
                android:gravity="left|center"
                android:textSize="14dp"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="sysadmin@eland.co.kr"
                android:gravity="left|center"
                android:textSize="14dp"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/txt_tel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="15110188722"
                android:gravity="left|center"
                android:textSize="14dp"
                android:textColor="@color/text_color"/>

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/item_action_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_txt_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_tel"
                android:drawablePadding="3dp"
                android:text="打电话"
                android:textColor="#888888"
                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:background="#ddaaaaaa"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <LinearLayout
            android:id="@+id/item_action_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_txt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_msg"
                android:drawablePadding="3dp"
                android:text="发短信"
                android:textColor="#888888"
                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:background="#ddaaaaaa"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <LinearLayout
            android:id="@+id/item_action_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_email"
                android:drawablePadding="3dp"
                android:text="发邮件"
                android:textColor="#888888"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>