<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!---->
    <RelativeLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/header">

        <com.eland.android.eoas.Views.CircleImageView
            android:id="@+id/img_photo"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@mipmap/eland_log"
            app:border_color="@color/md_white_1000"
            app:border_width="2dp"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Kethrien"
            android:textColor="@color/md_white_1000"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/txt_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="15110188722"
            android:drawableLeft="@mipmap/icon_tel_white"
            android:drawablePadding="8dp"
            android:textColor="@color/md_white_1000"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/left_more"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/txt_email"
            android:layout_alignTop="@+id/txt_tel"
           />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="sysadmin@eland.co.kr"
            android:drawableLeft="@mipmap/icon_email_white"
            android:drawablePadding="8dp"
            android:textColor="@color/md_white_1000"
            android:textSize="16dp"
            />
    </RelativeLayout>

    <include
        android:id="@+id/left_drawer_foot_layout"
        layout="@layout/drawer_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        />
</LinearLayout>
